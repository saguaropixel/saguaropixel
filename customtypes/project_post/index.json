{
  "format": "page",
  "id": "project_post",
  "label": "Project Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "project_post"
        }
      },
      "project_title": {
        "type": "Text",
        "config": {
          "label": "Project Title",
          "placeholder": ""
        }
      },
      "excerpt": {
        "type": "StructuredText",
        "config": {
          "label": "Excerpt",
          "placeholder": "",
          "allowTargetBlank": false,
          "multi": "paragraph,strong"
        }
      },
      "project_date": {
        "type": "Date",
        "config": {
          "label": "Project Date",
          "placeholder": ""
        }
      },
      "client_name": {
        "type": "Text",
        "config": {
          "label": "Client Name",
          "placeholder": ""
        }
      },
      "featured": {
        "type": "Boolean",
        "config": {
          "label": "Featured",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": false
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "headline_cta_centered": {
              "type": "SharedSlice"
            },
            "testimonial_with_avatar": {
              "type": "SharedSlice"
            },
            "image_carousel": {
              "type": "SharedSlice"
            },
            "process_with_image_steps": {
              "type": "SharedSlice"
            },
            "project_summary_showcase": {
              "type": "SharedSlice"
            },
            "hero_showcase": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
